@page
@using MyStore_Core3.DomainClasses
@model RegisterModel
@{
    ViewData["Title"] = "ثبت نام در سایت";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">>
            <h4>ایجاد حساب کاربری جدید</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            
            

            <div class="form-group">
                <label asp-for="Input.CustomerName"></label>
                <input asp-for="Input.CustomerName" class="form-control" />
                <span asp-validation-for="Input.CustomerName" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <label asp-for="Input.CustomerGender"></label>
                <select asp-for="Input.CustomerGender" class="form-control" asp-items="Html.GetEnumSelectList<EnumGenderType>()" >

                </select>
                <span asp-validation-for="Input.CustomerGender" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <label asp-for="Input.CustomerMobile"></label>
                <input asp-for="Input.CustomerMobile" class="form-control" />
                <span asp-validation-for="Input.CustomerMobile" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <label asp-for="Input.CustomerProfileImage"></label>
                <input type="file" name="imageUp" />
                <span asp-validation-for="Input.CustomerProfileImage" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <label asp-for="Input.CustomerAddress"></label>
                <input asp-for="Input.CustomerAddress" class="form-control text-muted" type="text" />
                <span asp-validation-for="Input.CustomerAddress" class="text-danger"></span>
            </div>

            

            <button type="submit" class="btn btn-primary">ثبت نام</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
