@model MyStore_Core3.ViewModel.DetailsProductViewModel


@{
    ViewData["Title"] = "جزئیات کالا";
}

<h2>جزئیات کالا @Model.ProductName</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductGroup)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductGroup.ProductGroupTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductImage)
        </dt>
        <dd class="col-sm-10">
            <img src="/ProductImages/@Model.ProductImage" class="thumbnail" style="max-width: 200px" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductStock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductStock)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductStatus)
        </dd>
    </dl>
</div>
<div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-sm btn-warning">ویرایش</a> |
        <a asp-action="Index" class="btn btn-sm btn-info">بازگشت به لیست</a>
    </div>
</div>
