@model IEnumerable<MyStore_Core3.ViewModel.ProductGroupViewModel>

@{
    ViewData["Title"] = "گروه کالا";
}

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa fa-plus-circle" aria-hidden="true"></i>
        افزودن سفارش جدید
    </a></p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductGroupTitle)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductGroupTitle)
            </td>
            <td style="width: 205px">
                <a asp-action="Edit" asp-route-id="@item.ProductGroupId" class="btn btn-sm btn-warning">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                    ویرایش
                </a> |
                <a asp-action="Details" asp-route-id="@item.ProductGroupId" class="btn btn-sm btn-info">
                    <i class="fa fa-info" aria-hidden="true"></i>
                    جزئیات
                </a> |
                <a asp-action="Delete" asp-route-id="@item.ProductGroupId" class="btn btn-sm btn-danger">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                    حذف
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
