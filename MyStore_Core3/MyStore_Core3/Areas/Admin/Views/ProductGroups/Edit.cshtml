@model MyStore_Core3.DomainClasses.ProductGroup

@{
    ViewData["Title"] = "ویرایش گروه";
}

<h2 class="text-center">ویرایش گروه</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductGroupId" />
            <div class="form-group">
                <label asp-for="ProductGroupTitle" class="control-label"></label>
                <input asp-for="ProductGroupTitle" class="form-control" />
                <span asp-validation-for="ProductGroupTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ویرایش" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-sm btn-warning">بازگشت به لیست</a>
</div>

